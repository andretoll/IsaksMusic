@model IsaksMusic.Models.ViewModels.NewsBlockViewModel

@foreach (var entry in Model.NewsEntries)
{
    <div class="news-entry-container news-entry-container-front">
        <div class="row">
            <div class="col-md-4 text-center">
                <img class="img-thumbnail" src="@entry.ImageUrl" alt="News Image" title="@entry.Headline" />
                <span class="text-muted ml-auto d-block mt-3 mb-3">Published: @entry.PublishDate</span>
            </div>
            <div class="col-md-8">
                <div class="news-entry-inner">                    
                    <div class="news-entry-header">
                        <a asp-page="/News/Entry" asp-route-id="@entry.Id"><h4 class="text-yellow">@entry.Headline</h4></a>
                        <!-- Community -->
                        <div class="fb-like ml-auto"
                             data-href="https://isaksmusic.azurewebsites.net/news/entry/@entry.Id"
                             data-layout="button_count"
                             data-action="like"
                             data-size="small"
                             data-show-faces="true"
                             data-share="false"
                             data-colorscheme="dark">
                        </div>
                        <div class="fb-share-button ml-2"
                             data-href="https://isaksmusic.azurewebsites.net/news/entry/@entry.Id"
                             data-layout="button_count"
                             data-size="small">
                        </div>
                    </div>
                    <hr />
                    <div class="news-entry-content collapse" id="newsEntryContent_@entry.Id">
                        <div class="news-entry-fade"></div>
                        @if (!string.IsNullOrEmpty(entry.Lead))
                        {
                            <p class="text-yellow font-italic">@entry.Lead</p>

                        }
                        <p class="news-body-text" id="body_@entry.Id">@entry.Body</p>
                        @if (!string.IsNullOrEmpty(entry.LinkUrl))
                        {
                            <a title="Opens new tab" class="d-inline-block text-yellow mt-4" href="@entry.LinkUrl" target="_blank">@entry.LinkTitle</a>
                        }
                    </div>
                    <a class="collapse-news-btn collapsed" id="collapseNewsBtn_@entry.Id" data-toggle="collapse" href="#newsEntryContent_@entry.Id" aria-expanded="false" aria-controls="collapseDescription"></a>
                </div>
            </div>
        </div>
    </div>
}

<script>

    if ("@Model.NoMoreData" === "True") {
        noMoreData = true;
    }

</script>
