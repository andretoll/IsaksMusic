@{
    Layout = "_Layout";
}

<div class="body-background">
    <div class="container">
        <div id="adminLayoutWrapper">
            <div class="wrapper-header">
                <div class="wrapper-header-left">
                    <span id="adminSidemenuCollapse" data-target="#adminSidemenu" data-toggle="collapse"><i class="fas fa-rotate fa-bars fa-lg"></i></span>
                </div>
                <h4>Admin</h4>
            </div>
            <div class="wrapper-body">
                <div class="side-menu-collapse collapse in width show" id="adminSidemenu">
                    <div class="list-group border-0 text-md-left">
                        <a asp-page="/admin/dashboard" class="list-group-item d-inline-block" title="Dashboard"><i class="fas fa-tachometer-alt fa-fw fas-mr"></i><span class="d-none d-md-inline">Dashboard</span></a>
                        <a asp-page="/admin/songs" class="list-group-item d-inline-block" title="Songs"><i class="fas fa-music fa-fw fas-mr"></i><span class="d-none d-md-inline">Songs</span></a>
                        <a asp-page="/admin/categories" class="list-group-item d-inline-block" title="Categories"><i class="fas fa-th fa-fw fas-mr"></i><span class="d-none d-md-inline">Categories</span></a>
                        <a asp-page="/admin/news/index" class="list-group-item d-inline-block" title="News"><i class="fas fa-newspaper fa-fw fas-mr"></i><span class="d-none d-md-inline">News</span></a>
                        <a asp-page="/" class="list-group-item d-inline-block" title="Statistics"><i class="fas fa-chart-pie fa-fw fas-mr"></i><span class="d-none d-md-inline">Statistics</span></a>
                        <a asp-page="/admin/settings" class="list-group-item d-inline-block" title="Settings"><i class="fas fa-cog fa-fw fas-mr"></i><span class="d-none d-md-inline">Settings</span></a>
                    </div>
                </div>
                <div class="wrapper-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqgrid/4.6.0/plugins/jquery.tablednd.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
}
