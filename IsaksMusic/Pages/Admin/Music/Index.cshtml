@page
@model IsaksMusic.Pages.Admin.Music.SongsModel
@{
    ViewData["Title"] = "Songs";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<!-- Show success message if any -->
@if (!string.IsNullOrEmpty(Model.Message))
{
    <script>
        window.onload = function () {

            ShowSuccessSnackbar("@Model.Message");
        }
    </script>
}

<div>
    <h2>Songs</h2>
    <hr />
    <a title="Add song" class="btn btn-success text-white" data-toggle="modal" data-target="#newSongModal">Add song</a>
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @Model.ErrorMessage
        </div>
    }
</div>
<div>
    @if (Model.SongList == null || Model.SongList.Count == 0)
    {
        <p class="text-center mt-4">Sorry, we couldn't find any songs in the database.</p>
    }
    else
    {
        <table class="table table-striped table-dark table-bordered" id="songTable">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Length</th>
                    <th>Category</th>
                    <th>Upload date</th>
                    <th>File name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.SongList)
                {
                    List
                    <string>
                        categoryList = new List<string>
                            ();

                    foreach (var category in song.SongCategories)
                    {
                        categoryList.Add(category.Category.Name);
                    }

                    string categoryString = String.Join(", ", categoryList);

                    <tr>
                        <td>
                            @song.Title
                            <a class="float-right">
                                <i tabindex="0" data-toggle="popover" data-trigger="focus" title="Description" data-content="@song.Description" class="fas fa-info-circle"></i>
                            </a>
                        </td>
                        <td>@TimeSpan.FromSeconds(song.Length)</td>
                        <td>@categoryString</td>
                        <td>@song.UploadDate.ToShortDateString()</td>
                        <td>@song.FileName</td>
                        <td>
                            <button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu">
                                @*<a class="dropdown-item" href="#"><i class="fas fa-pen-square fas-mr"></i>Edit</a>*@
                                <a class="dropdown-item" href="#"><i class="fas fa-trash fas-mr text-danger"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- New Song Modal -->
<div class="modal fade" id="newSongModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title text-yellow">Add Song</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form id="form" name="form" action="/uploader" enctype="multipart/form-data" method="post">
                    <div class="buttons">
                        <div class="upload-button">
                            <input id="musicFile" name="musicFile" type="file" size="1" multiple onchange="uploadFiles('musicFile');" />
                        </div>
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                    </div>
                </form>
                <form id="songForm" name="songForm" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input class="validate" id="musicFileName" asp-for="Song.MusicFile" type="hidden" required/>
                        <span asp-validation-for="Song.MusicFile"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Song.Title"></label>
                        <input asp-for="Song.Title" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Song.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Song.CategoryIds"></label>
                        <select data-max-options="2" multiple class="selectpicker form-control" id="categorySelect" asp-for="Song.CategoryIds" asp-items="Model.CategoryList" data-style="btn-dark"></select>
                        <span asp-validation-for="Song.CategoryIds"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Song.Description"></label>
                        <textarea asp-for="Song.Description" class="form-control" id="songDescription"></textarea>
                        <span asp-validation-for="Song.Description"></span>
                    </div>
                    <div class="form-row mb-4">
                        <div class="col">
                            <label asp-for="Song.Minutes"></label>
                            <input type="number" asp-for="Song.Minutes" class="form-control" />
                            <span asp-validation-for="Song.Minutes"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Song.Seconds"></label>
                            <input asp-for="Song.Seconds" class="form-control" />
                            <span asp-validation-for="Song.Seconds"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-success" value="Submit song" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>