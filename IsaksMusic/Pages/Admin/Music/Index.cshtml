@page
@model IsaksMusic.Pages.Admin.Music.SongsModel
@{
    ViewData["Title"] = "Songs";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div>
    <h2>Songs</h2>
    <hr />
    <a class="btn btn-success text-white" data-toggle="modal" data-target="#newSongModal">Add song</a>
</div>
<div>
    @if (Model.SongList == null || Model.SongList.Count == 0)
    {
        <p class="text-center mt-4">Sorry, we couldn't find any songs in the database.</p>
    }
    else
    {
        <table class="table table-striped table-dark table-bordered" id="songTable">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Length</th>
                    <th>Category</th>
                    <th>Upload date</th>
                    <th>File name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.SongList)
                {
                    <tr>
                        <td>@song.Title</td>
                        <td>@TimeSpan.FromSeconds(song.Length)</td>
                        <td>House</td>
                        <td>@song.UploadDate.ToShortDateString()</td>
                        <td>@song.FileName</td>
                        <td>
                            <div class="d-sm-inline-flex">
                                <a asp-page="/" class="btn btn-info table-btn"><i class="fas fa-pen-square"></i></a>
                                <a asp-page="/" class="btn btn-danger table-btn"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- New Song Modal -->
<div class="modal fade" id="newSongModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title text-yellow">Add Song</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input asp-for="Song.MusicFile" type="file" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Song.Title"></label>
                        <input asp-for="Song.Title" class="form-control" />
                        <span asp-validation-for="Song.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Song.Description"></label>
                        <textarea asp-for="Song.Description" class="form-control" id="songDescription"></textarea>
                        <span asp-validation-for="Song.Description"></span>
                    </div>
                    <div class="form-row mb-4">
                        <div class="col">
                            <label asp-for="Song.Minutes"></label>
                            <input asp-for="Song.Minutes" class="form-control" />
                            <span asp-validation-for="Song.Minutes"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Song.Seconds"></label>
                            <input asp-for="Song.Seconds" class="form-control" />
                            <span asp-validation-for="Song.Seconds"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-success" value="Submit song" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




