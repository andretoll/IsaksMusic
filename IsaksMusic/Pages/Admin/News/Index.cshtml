@page
@model IsaksMusic.Pages.Admin.News.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div>
    <div class="d-flex align-items-center">
        <h3>News</h3>
        <div class="ml-auto">
            <a asp-page="Create" title="Add news entry" class="btn btn-success text-white">+ New</a>
        </div>
    </div>
    <hr />

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @Model.ErrorMessage
        </div>
    }
</div>

<div>
    @foreach (var entry in Model.NewsEntries)
    {
        <div class="news-entry-container">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img id="myImg" class="img-thumbnail" src="@entry.ImageUrl" />
                    <span class="text-muted ml-auto">@StringFormatter.GetDatetimeNoSeconds(entry.PublishDate)</span>

                </div>
                <div class="col-md-9">
                    <div class="news-entry-inner">
                        <div class="news-entry-header">
                            <h4 class="text-yellow">@entry.Headline</h4>
                            <div class="news-entry-actions">
                                <a title="Delete" data-toggle="tooltip" asp-page="./Delete" asp-route-id="@entry.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a title="Edit" data-toggle="tooltip" asp-page="./Edit" asp-route-id="@entry.Id">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </div>
                        </div>
                        <hr />
                        <div class="news-entry-content collapse" id="newsEntryContent_@entry.Id">
                            @if (!string.IsNullOrEmpty(entry.Lead))
                            {
                                <p class="text-muted font-italic">@entry.Lead</p>

                            }
                            <p class="news-body-text">@entry.Body</p>
                            <a class="text-yellow" href="@entry.LinkUrl" target="_blank">@entry.LinkTitle</a>
                        </div>
                        <a class="collapse-news-btn collapsed" id="collapseNewsBtn_@entry.Id" data-toggle="collapse" href="#newsEntryContent_@entry.Id" aria-expanded="false" aria-controls="collapseDescription"></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>