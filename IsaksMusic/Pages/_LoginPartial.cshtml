@using Microsoft.AspNetCore.Identity
@using IsaksMusic.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fas-mr fa-user-circle"></i>@(Context.User.IsInRole("Admin") ? "admin" : @UserManager.GetUserName(User))</a>
                <div class="dropdown-menu dropdown-menu-right">
                    <div><a class="dropdown-item" asp-page="/Admin/Dashboard" title="Dashboard"><i class="fas fa-tachometer-alt fa-fw mr-1"></i>Dashboard</a></div>
                    <div class="dropdown-divider"></div>
                    <div><button type="submit" class="dropdown-item btn-link" title="Logout"><i class="fas fa-sign-out-alt fa-fw mr-1"></i>Log out</button></div>
                </div>
                @*<a asp-page="/Account/Manage/Index" title="Manage"></a>*@
            </li>
            <li>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right text-uppercase">
        @*<li><a asp-page="/Account/Register">Register</a></li>*@
        @*<li class="nav-item"><a class="nav-link" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path">Log in</a></li>*@
    </ul>
}
