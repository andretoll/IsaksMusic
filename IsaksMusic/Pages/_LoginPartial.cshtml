@using Microsoft.AspNetCore.Identity
@using IsaksMusic.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User)</a>
                <div class="dropdown-menu dropdown-menu-right">
                    <div><a class="dropdown-item" asp-page="/" title="Dashboard"><i class="fas fa-tachometer-alt fa-fw mr-1"></i>Dashboard</a></div>
                    <div><button type="submit" class="dropdown-item btn-link" title="Logout"><i class="fas fa-sign-out-alt fa-fw mr-1"></i>Log out</button></div>
                </div>
                @*<a asp-page="/Account/Manage/Index" title="Manage"></a>*@
            </li>
            <li>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-page="/Account/Register">Register</a></li>*@
        <li><a asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path">Log in</a></li>
    </ul>
}
